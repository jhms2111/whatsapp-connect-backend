{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",

    // âœ… adicionados:
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": false,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/types/**/*.d.ts",
    "src/infraestructure/express/routes/sendWhatsapp.ts",
    "src/infraestructure/express/routes/paymentRoutes.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
