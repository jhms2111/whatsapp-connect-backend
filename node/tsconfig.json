{
  "compilerOptions": {
    "target": "es2016",     
    "module": "commonjs",                                
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,           
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/types/**/*.d.ts",
    "src/infraestructure/express/routes/sendWhatsapp.ts",
    "src/infraestructure/express/routes/paymentRoutes.ts"
  ]
}
